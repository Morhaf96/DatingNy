@using LuvDating.Models
@model HomeIndexViewModel
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    @if(TempData["notice"] != null)
    {
    <div class="alert alert-warning" role="alert">@TempData["notice"]</div>
    }
    <h1>Luv Dating</h1>
    <p class="lead">Luv Dating är en mötesplats för alla ensamma singlar. Välkommen in i värmen!</p>
    
</div>

<div class="row">

    @foreach (var profile in Model.UserList)
    {


        <div class="col-sm-6 col-md-3">
            <div style="max-width: 290px; max-height: 340px; min-height: 340px; min-width:290px;" class="thumbnail">
                <img style="max-width: 200px; max-height: 225px;" src="~/UploadedFiles/@profile.ImageName" alt="Profilbild" />
                <div class="caption">
                    <h3>@profile.Name</h3>
                    <p>@profile.Bio</p>
                    <a href="/Profile/UserProfile/@profile.Id" class="btn btn-primary">View Profile</a>
</div>
            </div>
        </div>

    }
</div>