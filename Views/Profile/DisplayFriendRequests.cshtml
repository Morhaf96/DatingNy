@using LuvDating.Models
@model SenderListModel
@{
    ViewBag.Title = "Friendrequests";
}

<h2>FriendRequests</h2>

<table class="table">

    @foreach (var friend in Model.RequestsFrom)
    {
        <tr>


            <td>@friend.Name</td>
            <td>@friend.Gender</td>
            <td>@friend.BirthDate</td>
            <td>
                <input type="button" class="btn btn-default" value="Accept" onclick="location.href='@Url.Action("AcceptRequest", "Profile", new { id = friend.Id } )'" />
                <input type="button" class="btn btn-default" value="Decline" onclick="location.href='@Url.Action("DeclineRequest", "Profile", new { id = friend.Id } )'" />
            </td>

        </tr>
    }
</table>